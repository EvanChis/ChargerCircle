# Django Core Settings
# INSECURE: Generate a real secret key for production in your .env file
SECRET_KEY=insecure-local-development-key-only
# Set to 0 in production
DEBUG=1
ALLOWED_HOSTS=127.0.0.1,localhost

# Required for production CSRF protection
# Example: CSRF_TRUSTED_ORIGINS=https://.app
CSRF_TRUSTED_ORIGINS=

# Database & Cache (Defaults to local SQLite & in-memory cache)
# Replace with Neon URL for production-like local dev or on the server
DATABASE_URL=sqlite:///db.sqlite3
# Replace with Upstash URL
REDIS_URL=

# Email (for magic links)
# In dev, emails print to console. In prod, set provider and key.
EMAIL_PROVIDER=console
EMAIL_API_KEY=
EMAIL_FROM="Charger Connect <noreply@localhost>"

# Identity & Privacy
PUBLIC_NAME_FORMAT=first_only
AGE_VISIBILITY=private

# Feature Flags (1=on, 0=off)
FF_LIVE_MAP=1
FF_PRESENCE=1
FF_COURSE_ROOMS=1
FF_DROPINS=1
FF_MATCHING=1
